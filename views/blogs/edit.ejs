<% layout('layout/boilerplate') %> 
   


    <div class="row">
        <h1 class="text-center">Edit blog</h1>
        <div class="col-6 offset-3">
            <form action="/blogs/<%=blog._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="blog[title]" value="<%=blog.title %> ">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Entry</label>
                   <textarea class="form-control" type="text" id="description" name="blog[description]" cols="50" rows="10" ><%=blog.description %></textarea>
                </div>
                <div class="mb-3">
                
                <label for="image" class="form-label">Update Pictures!</label>
                <input class="form-control form-control-sm" id="image" type="file" name="image" multiple>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">image</label>
                    <input class="form-control" type="text" id="image" name="blog[image]">
                </div>  -->
            </div>
            <div class="mb-3">
                <% blog.image.forEach(function(img,i){ %> 
                    <img src="<%= img.url %> " class="img-thumbnail"alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                    <% }) %> 
            </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update</button>
                    <button class="btn btn-warning"><a href="/blogs/<%= blog._id%>" style="text-decoration: none;color:black;">Back to blog</a></button>
                </div>
                
                
            </form>
        </div>
       </div>
    